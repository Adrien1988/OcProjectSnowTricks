{% extends 'base.html.twig' %}

{% block title %}
    {{ figure.name }} - Détails
{% endblock %}

{% block body %}
<section class="container my-5">
    <!-- Image principale avec overlay -->
    <div class="figure-header position-relative text-center">
        {% include "partials/_main_image.html.twig" %}

        <div class="figure-overlay">
            <h1 class="figure-title">{{ figure.name }}</h1>
        </div>

        <!-- Boutons Modifier/Supprimer image principale -->
        {% include "partials/_main_image_buttons.html.twig" %}
    </div>

    <!-- Description et groupe -->
    <div class="mt-4 p-4 bg-light rounded shadow-lg">
        <h5 class="text-uppercase">Description</h5>
        <p>{{ figure.description }}</p>

        <h5 class="text-uppercase mt-3">Groupe</h5>
        <p>{{ figure.figureGroup }}</p>
    </div>

    <!-- Images supplémentaires -->
    <div class="mt-5">
        <h5 class="text-uppercase">Images</h5>
        <div class="row">
            {% for image in figure.images %}
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="card shadow-sm">
                        <img src="{{ asset(image.url) }}"
                             class="card-img-top"
                             alt="{{ image.altText|default('Image supplémentaire') }}"
                             style="object-fit: cover; height: 200px; width: 100%;">
                    </div>
                </div>
            {% endfor %}
            
            {% if is_granted('ROLE_USER') and figure.author == app.user %}
                <!-- Carte floutée pour ajouter une nouvelle image -->
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="card card-bg-blur d-flex align-items-center justify-content-center"
                         data-bs-toggle="modal"
                         data-bs-target="#addImageModal"
                         style="height: 200px;">
                        <i class="fa-regular fa-square-plus fa-3x text-white"></i>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>

    <!-- Vidéos -->
    <div class="mt-5">
        <h5 class="text-uppercase">Vidéos</h5>
        <div class="row">
            {% for video in figure.videos %}
                <div class="col-md-4 mb-3">
                    <div class="card shadow-sm">
                        <div class="ratio ratio-16x9">
                            {{ video.embedCode|raw }}
                        </div>
                    </div>
                </div>
            {% endfor %}
            
            {% if is_granted('ROLE_USER') and figure.author == app.user %}
                <div class="col-md-4 mb-3">
                    <div class="card card-bg-blur d-flex align-items-center justify-content-center"
                         data-bs-toggle="modal"
                         data-bs-target="#addVideoModal"
                         style="height: 200px;">
                        <i class="fa-regular fa-square-plus fa-3x text-white"></i>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>

    <!-- Commentaires -->
    <div class="mt-5">
        <h5 class="text-uppercase">Commentaires</h5>
        
        {% if comments is not empty %}
            {% for comment in comments %}
                <div class="comment-box p-3 mb-3 rounded shadow-sm">
                    <div class="d-flex align-items-center mb-2">
                        <strong>{{ comment.author.username }}</strong>
                        <small class="text-muted ms-3">{{ comment.createdAt|date('d/m/Y H:i') }}</small>
                    </div>
                    <p>{{ comment.content }}</p>
                </div>
            {% endfor %}
        {% else %}
            <p class="text-muted">Aucun commentaire disponible.</p>
        {% endif %}

        <!-- Formulaire d'ajout de commentaire -->
        {% if is_granted('ROLE_USER') %}
            <div class="mt-4 p-4 bg-light rounded shadow-lg">
                <h5 class="text-uppercase">Ajouter un commentaire</h5>
                {{ form_start(commentForm, {
                    'action': path('app_figure_add_comment', { 'id': figure.id }),
                    'method': 'POST'
                }) }}
                    {{ form_widget(commentForm) }}
                    <div class="d-grid mt-3">
                        <button type="submit" class="btn btn-lg btn-comment">Publier</button>
                    </div>
                {{ form_end(commentForm) }}
            </div>
        {% endif %}
    </div>
</section>
{% endblock %}
