{% extends 'base.html.twig' %}

{% block title %}{{ figure.name }} - Détails{% endblock %}

{% block body %}
<section class="container my-5">
    <!-- Image principale avec superposition du nom et les boutons Modifier/Supprimer -->
    <div class="position-relative">
        {% set mainImage = figure.images|first %}
        {% if mainImage %}
            <img src="{{ asset('uploads/' ~ mainImage.url) }}" class="img-fluid w-100" alt="{{ mainImage.altText|default('Image de la figure') }}">
        {% else %}
            <img src="{{ asset('build/images/default-image.jpg') }}" class="img-fluid w-100" alt="Image par défaut">
        {% endif %}

        <!-- Superposition du nom de la figure -->
        <div class="position-absolute bottom-0 start-0 p-3 bg-dark text-white bg-opacity-75 w-100">
            <h1 class="text-uppercase">{{ figure.name }}</h1>
        </div>

        <!-- Boutons Modifier et Supprimer pour l'image principale -->
        {% if is_granted('ROLE_USER') %}
            <div class="position-absolute top-0 end-0 p-3">
                <button type="button" class="btn btn-secondary btn-sm me-2">Modifier</button>
                <button type="button" class="btn btn-danger btn-sm">Supprimer</button>
            </div>
        {% endif %}
    </div>

    <!-- Section Description -->
    <div class="mt-4">
        <h5 class="text-uppercase">Description</h5>
        <p>{{ figure.description }}</p>

        <h5 class="text-uppercase">Groupe</h5>
        <p>{{ figure.figureGroup }}</p>
    </div>

    <!-- Section Images supplémentaires -->
    <div class="mt-5">
        <h5 class="text-uppercase">Images</h5>
        {% if is_granted('ROLE_USER') %}
            <!-- Bouton pour ouvrir la modale d'ajout d'image -->
            <button type="button" class="btn btn-success mb-3" data-bs-toggle="modal" data-bs-target="#addImageModal">
                Ajouter une image
            </button>
        {% endif %}

        {% if figure.images|length > 1 %}
            <div class="row">
                {% for image in figure.images|slice(1) %}
                    <div class="col-md-4 mb-3">
                        <img src="{{ asset('uploads/' ~ image.url) }}" class="img-fluid" alt="{{ image.altText|default('Image supplémentaire') }}">
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p class="text-muted">Aucune image supplémentaire disponible.</p>
        {% endif %}
    </div>

    <!-- Modal pour ajouter une image -->
    <div class="modal fade" id="addImageModal" tabindex="-1" aria-labelledby="addImageModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addImageModalLabel">Ajouter une image</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    {{ form_start(imageForm, { 'action': path('app_figure_add_image', { id: figure.id }), 'method': 'POST', 'attr': { 'enctype': 'multipart/form-data' } }) }}
                    {{ form_widget(imageForm) }}
                    <div class="d-grid mt-3">
                        <button type="submit" class="btn btn-primary">Ajouter</button>
                    </div>
                    {{ form_end(imageForm) }}
                </div>
            </div>
        </div>
    </div>

    <!-- Section Vidéos -->
    <div class="mt-5">
        <h5 class="text-uppercase">Vidéos</h5>
        {% if is_granted('ROLE_USER') %}
            <!-- Bouton pour ouvrir la modale d'ajout de vidéo -->
            <button type="button" class="btn btn-success mb-3" data-bs-toggle="modal" data-bs-target="#addVideoModal">
                Ajouter une vidéo
            </button>
        {% endif %}

        {% if figure.videos|length > 0 %}
            {% for video in figure.videos %}
                <div class="ratio ratio-16x9 mb-3">
                    <iframe src="{{ video.embedCode }}" frameborder="0" allowfullscreen></iframe>
                </div>
            {% endfor %}
        {% else %}
            <p class="text-muted">Aucune vidéo disponible.</p>
        {% endif %}
    </div>

    <!-- Modal pour ajouter une vidéo -->
    <div class="modal fade" id="addVideoModal" tabindex="-1" aria-labelledby="addVideoModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addVideoModalLabel">Ajouter une vidéo</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    {{ form_start(videoForm, { 'action': path('app_figure_add_video', { id: figure.id }), 'method': 'POST' }) }}
                    {{ form_widget(videoForm) }}
                    <div class="d-grid mt-3">
                        <button type="submit" class="btn btn-primary">Ajouter</button>
                    </div>
                    {{ form_end(videoForm) }}
                </div>
            </div>
        </div>
    </div>

    <hr>
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}
</section>
{% endblock %}
