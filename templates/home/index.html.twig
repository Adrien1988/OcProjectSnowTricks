{% extends 'base.html.twig' %}

{% block title %}Liste des figures{% endblock %}

{% block body %}

<!-- En-t√™te avec image de fond -->
<header class="hero-header text-center d-flex flex-column justify-content-center align-items-center">
    <!-- On passe ici le titre en H2 au lieu de H1 -->
    <h2 class="display-4 fw-bold">Bienvenue sur SnowTricks</h2>
    <p class="lead">D√©couvrez les plus belles figures de snowboard</p>

    <!-- Bouton pour descendre vers la liste -->
    <button id="scrollDownButton" class="btn btn-neutral mt-3" title="Aller vers la liste des figures">
        Voir la liste
    </button>
</header>

<div class="container my-4 intro-section">
    <div class="p-4 bg-light rounded shadow-lg text-center">
        <h2 class="mb-3">Pr√©sentation</h2>
        <p class="fs-5 text-muted">
            Sur SnowTricks, explorez, apprenez et partagez les figures embl√©matiques du snowboard.
            Que vous soyez d√©butant ou rider confirm√©, notre communaut√© est l√† pour vous inspirer
            et √©changer conseils et astuces. Rejoignez-nous‚ÄØ!
        </p>
    </div>
</div>

<!-- Section des figures -->
<section class="container my-5 pt-5 mb-5">
    <div id="figures-list" class="d-flex justify-content-between align-items-center mb-4">
        <div class="container my-5">
            <div class="p-4 bg-white rounded shadow-lg text-center">
                <!-- Ici, on garde le h1 pour la page -->
                <h1 class="display-4">Figures de Snowboard</h1>
                <p class="text-muted fs-5">
                    Retrouvez ici l‚Äôessentiel des figures pour les passionn√©s et les curieux.
                </p>
                <hr class="mx-auto hr-deco">
            </div>
        </div>
    </div>

    <div class="row">
        {% for figure in figures %}
            <div class="col-lg-4 col-md-6 col-sm-12 mb-4 d-flex">
                <div class="card shadow-lg">
                    {% include "partials/_main_image.html.twig" %}
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <a href="{{ path('app_figure_detail', { id: figure.id, slug: figure.slug }) }}" class="text-decoration-none">
                            <h5 class="card-title text-uppercase mb-0">{{ figure.name }}</h5>
                        </a>
                        {% if is_granted('ROLE_USER') and figure.author == app.user %}
                            <div class="btn-group">
                                <a href="{{ path('app_figure_edit', { id: figure.id }) }}" class="btn btn-secondary btn-sm">‚úèÔ∏è</a>
                                <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#modal-delete-{{ figure.id }}">üóëÔ∏è</button>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>

            <!-- Fen√™tre modale pour la suppression -->
            <div class="modal fade" id="modal-delete-{{ figure.id }}" tabindex="-1" aria-labelledby="modal-delete-label-{{ figure.id }}" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="modal-delete-label-{{ figure.id }}">Confirmer la suppression</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            √ätes-vous s√ªr de vouloir supprimer la figure
                            <strong>{{ figure.name }}</strong>
                            ?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                            <form method="post" action="{{ path('app_figure_delete', { id: figure.id }) }}">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete_figure_' ~ figure.id) }}">
                                <button type="submit" class="btn btn-danger">Confirmer</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12 text-center">
                <p class="text-muted">Aucune figure n'est disponible pour le moment. Revenez plus tard !</p>
            </div>
        {% endfor %}

        {% if is_granted('ROLE_USER') %}
            <div class="col-lg-4 col-md-6 col-sm-12 mb-4 d-flex">
                <div class="card shadow w-100 text-center card-bg-blur" style="cursor: pointer;" data-bs-toggle="modal" data-bs-target="#createFigureModal">
                    <div class="card-body d-flex align-items-center justify-content-center">
                        <i class="fa-regular fa-square-plus fa-3x" style="color: #ffffff;"></i>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
</section>

<!-- Modale pour la cr√©ation d'une figure -->
<div class="modal fade" id="createFigureModal" tabindex="-1" aria-labelledby="createFigureModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createFigureModalLabel">Cr√©er une nouvelle figure</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                {{ form_start(createFigureForm, { 'action': path('app_figure_add'), 'method': 'POST' }) }}
                    {{ form_widget(createFigureForm) }}
                    <div class="d-grid mt-4">
                        <button type="submit" class="btn btn-primary">Cr√©er</button>
                    </div>
                {{ form_end(createFigureForm) }}
            </div>
        </div>
    </div>
</div>

<!-- Bouton retour en haut -->
<button id="scrollUpButton" class="btn btn-neutral position-fixed bottom-20 end-0 m-3" title="Retour en haut">
    <i class="fa-solid fa-arrow-up"></i>
</button>

{% endblock %}
